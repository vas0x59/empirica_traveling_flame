FoamFile
{
    format      ascii;
    class       dictionary;
    location    "constant";
    object      fvModels;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ignition
{
    type            constantbXiIgnition;

    select          cellZone;
    cellZone        ignition;

    start           0.00;
    duration        0.001;
    strength        1;

    XiCorr
    {
        type            spherical;
        select          all;
    }
}


