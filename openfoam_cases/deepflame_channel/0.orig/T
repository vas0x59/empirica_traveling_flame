FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 293;

boundaryField
{
    // X0
    // {
    //     type            inletOutlet;
    //     inletValue      $internalField;
    //     value           $internalField;
    // }
    XL
    {
        type            inletOutlet;
        inletValue      $internalField;
        value           $internalField;
    }

    "(border).*"
    {
        // type            zeroGradient;
        type            externalWallHeatFluxTemperature;
        mode coefficient;
        h uniform 10;
        Ta constant 293;
        thicknessLayers (0.003); // orgsteklo
        kappaLayers     (0.3);
        value           uniform 293;
    }

    "(sym).*"
    {
        type            symmetryPlane;
    }
}


