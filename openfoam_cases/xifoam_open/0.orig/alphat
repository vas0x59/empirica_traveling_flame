dimensions      [1 -1 -1 0 0 0 0];

internalField   uniform 0.0;

boundaryField
{
    
    // X0
    // {
    //     type            inletOutlet;
    //     inletValue      $internalField;
    //     value           $internalField;
    // }
    top {
        type            calculated;
        value           uniform 0;
        Prt             0.0;
    }
    XL
    {
        type            calculated;
        value           uniform 0;
        Prt             0.0;
    }

    "(border).*"
    {
        type            zeroGradient;
    }
    border_0
    {
        type            calculated;
        value           uniform 0;
        Prt             0.0;
    }
    
    "(sym).*"
    {
        type            symmetryPlane;
    }
}


