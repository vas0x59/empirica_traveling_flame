FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300;

boundaryField
{
    in
    {
        type            fixedValue;
        value           uniform 300;
    }

    border
    {
        type            zeroGradient;
        // value           uniform 293;
    }

    out
    {
        type            inletOutlet;
        inletValue      uniform 300;
        value           uniform 300;
    }
}


